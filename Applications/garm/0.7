#%Module1.0###################################################
#
# This modulefile for package GARM creates a variable so
# that users can easily find the right libraries
#
##############################################################

proc ModulesHelp { } {
puts stderr "The GARM module file defines the following environment variables:"
puts stderr "PATH, for "
puts stderr "the location of the rsem distribution and its libraries.\n"
puts stderr "\nVersion 0.7"
}
module-whatis "Name: GARM"
module-whatis "Version: 0.7"
module-whatis "Category: library, statistical, graphics"
module-whatis "URL: http://sourceforge.net/projects/garm-meta-assem/?source=navbar"
module-whatis "Description: Meta Assembler for de novo assembly results"

prepend-path GARMBIN		/opt/garm/0.7/perl/bin
prepend-path GARMLIB		/opt/garm/0.7/perl/lib
prepend-path MUMBIN		/opt/mummer/3.23/gcc
prepend-path AMOSBIN		/opt/amos/3.0.0/gcc/bin
prepend-path PATH		/opt/garm/0.7/perl
prepend-path PATH		/opt/garm/0.7/perl/bin
prepend-path LD_LIBRARY_PATH	/opt/garm/0.7/perl/lib

module load perl
