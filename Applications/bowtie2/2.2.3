#%Module1.0###################################################
#
# This modulefile for package Bowtie2 creates a variable so
# that users can easily find the right libraries
#
##############################################################

proc ModulesHelp { } {
puts stderr "The Bowtie2 module file defines the following environment variables:"
puts stderr "PATH for "
puts stderr "the location of the Bowtie2 distribution and its libraries.\n"
puts stderr "\nVersion 2.2.3"
}
module-whatis "Name: Bowtie2"
module-whatis "Version: 2.2.3"
module-whatis "Category: genome, sequence, alignment"
module-whatis "URL: http://bowtie-bio.sourceforge.net/index.shtml"
module-whatis "Description: Ultrafast, memory-efficient alignment of short DNA sequences"


prepend-path PATH               /opt/bowtie2/2.2.3/prebuilt
