#%Module1.0###################################################
#
# This modulefile for package log4cpp creates a variable so
# that users can easily find the right libraries
#
##############################################################

proc ModulesHelp { } {
puts stderr "The log4cpp module file defines the following environment variables:"
puts stderr "LD_LIBRARY_PATH for "
puts stderr "the location of the log4cpp C++ libraries.\n"
puts stderr "\nVersion log4cpp"
}
module-whatis "Name: log4cpp"
module-whatis "Version: 1.1.1"
module-whatis "Category: log4cpp"
module-whatis "URL: http://log4cpp.sourceforge.net"
module-whatis "Description: log4cpp"

prepend-path LD_LIBRARY_PATH	/opt/log4cpp/1.1.1/gcc/lib
prepend-path LIBRARY_PATH	/opt/log4cpp/1.1.1/gcc/lib
prepend-path CPATH		/opt/log4cpp/1.1.1/gcc/include
