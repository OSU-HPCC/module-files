#%Module1.0

## Python

proc ModulesHelp { } {
        puts stderr "\n"
        puts stderr "\tModule python loads environmental variables defining"
        puts stderr "\tthe location of the Python binaries and libraries: "
        puts stderr "\tPython Version python2_7_3\n"
 }

module-whatis "Python"
module-whatis "Version: 2.7.3"
module-whatis "Category: system, development"
module-whatis "Description: interpreted programming language"
module-whatis "URL: http://www.python.org"

# Tcl script only
set version 2.7.3

# Prepend the Python directories to the adequate PATH variables
prepend-path PATH /opt/python/2.7.3/gcc/bin
##prepend-path PYTHONPATH /opt/python/2.7.3/gcc/lib:/opt/apps/python/2.6.5/modules/lib/python
prepend-path LD_LIBRARY_PATH /opt/python/2.7.3/gcc/lib
prepend-path MANPATH /opt/python/2.7.3/gcc/share/man/man1


