#%Module1.0###################################################
#
# This modulefile for package TransDecoder creates a variable so
# that users can easily find the right libraries
#
##############################################################

proc ModulesHelp { } {
puts stderr "The TransDecoder  module file defines the following environment variables:"
puts stderr "PATH for "
puts stderr "the location of the TransDecoder executibles.\n"
puts stderr "\nVersion 2.0.1"
}
module-whatis "Name: TransDecoder"
module-whatis "Version: 2.0.1"
module-whatis "Category: bioinformatics"
module-whatis "URL: http://transdecoder.github.io"
module-whatis "Description:  TransDecoder identifies candidate coding regions within transcript sequences, such as those generated by de novo RNA-Seq transcript assembly using Trinity, or constructed based on RNA-Seq alignments to the genome using Tophat and Cufflinks."


prepend-path PATH               /opt/transdecoder/2.0.1/gcc/util
prepend-path PATH		/opt/transdecoder/2.0.1/gcc/util/bin
