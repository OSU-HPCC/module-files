#%Module1.0###################################################
#
# This modulefile for package NWChem creates a variable so
# that users can easily find the right libraries
#
##############################################################

proc ModulesHelp { } {
puts stderr "The NWChem module file defines the following environment variables:"
puts stderr "PATH for "
puts stderr "the location of the NWChem distribution and its libraries.\n"
puts stderr "\nVersion 6.3 MPI"
}
module-whatis "Name: NWChem"
module-whatis "Version: 6.3 MPI"
module-whatis "Category: chemistry, computation, dynamics"
module-whatis "URL: http://www.nwchem-sw.org"
module-whatis "Description: Computational chemistry tools for parallel computing and problem solving"

#prepend-path LARGE_FILES	TRUE
#prepend-path USE_NOFSCHECK	TRUE
#prepend-path PATH               /opt/nwchem/6.3/openmpi-1.6-gnu/bin/LINUX64
#prepend-path IB_HOME		"location of OpenIB software"
#prepend-path IB_INCLUDE		/usr/src/ofa_kernel-1.5.4.1/include
#prepend-path IB_LIB		/usr/src/ofa_kernel-1.5.4.1/lib64
#prepend-path IB_LIB_NAME	"-libumad -lpthread"
prepend-path USE_MPI		y
prepend-path USE_MPIF		y
prepend-path USE_MPIF4		y
prepend-path MPI_HOME		/act/openmpi-1.6/gnu
prepend-path MPI_LIB		/act/openmpi-1.6/gnu/lib
prepend-path MPI_INCLUDE	/act/openmpi-1.6/gnu/include
#prepend-path BLASOPT		-L/opt/intel/composerxe/mkl/lib/intel64 -lmkl_gf_ilp64 -lmkl_sequential -lmkl_core -lpthread -lm
prepend-path BLAS_LIB		-L/opt/intel/composerxe/mkl/lib/intel64 -lmkl_gf_ilp64 -lmkl_sequential -lmkl_core -lpthread -lm
prepend-path LIBMPI		-lmpi -lmpigf -lmpigi -lrt -lpthread

prepend-path ARMCI_NETWORK	OPENIB
prepend-path FC			mpif90
prepend-path CC			mpicc
prepend-path CXX		mpicxx

prepend-path NWCHEM_TOP		/opt/nwchem/6.3/openmpi-1.6-gnu
prepend-path NWCHEM_TARGET	LINUX64
prepend-path NWCHEM_EXECUTABLE	/opt/nwchem/6.3/openmpi-1.6-gnu/bin/LINUX64/nwchem
prepend-path LD_LIBRARY_PATH	/opt/nwchem/6.3/openmpi-1.6-gnu/lib/LINUX64
prepend-path LD_LIBRARY_PATH	/opt/nwchem/6.3/openmpi-1.6-gnu/src/basis/libraries
prepend-path NWCHEM_BASIS_LIBRARY /opt/nwchem/6.3/openmpi-1.6-gnu/src/basis/libraries
# prepend-path ARMCI_DEFAULT_SHMMAX 2048

module load openmpi-1.6/gnu
