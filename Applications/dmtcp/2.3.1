#%Module1.0###################################################
#
# This modulefile for package DMTCP creates a variable so
# that users can easily find the right libraries
#
##############################################################

proc ModulesHelp { } {
puts stderr "The DMTCP module file defines the following environment variables:"
puts stderr "PATH, CPATH, LD_LIBRARY_PATH for "
puts stderr "the location of the DMTCP distribution and its libraries.\n"
puts stderr "\nVersion 2.3.1"
}
module-whatis "Name: DMTCP"
module-whatis "Version: 2.3.1"
module-whatis "Category: checkpoint"
module-whatis "URL: http://www.dmtcp.sourceforge.net"
module-whatis "Description: Checkpointing software"


prepend-path PATH               /opt/dmtcp/2.3.1/gcc/bin
prepend-path CPATH		/opt/dmtcp/2.3.1/gcc/install
prepend-path MANPATH            /opt/dmtcp/2.3.1/gcc/manpages
prepend-path LD_LIBRARY_PATH	/opt/dmtcp/2.3.1/gcc/lib
