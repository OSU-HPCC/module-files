#%Module1.0###################################################
#
# This modulefile for Macaulay2 sets the Path variable
# to the bin directory
#
##############################################################

proc ModulesHelp { } {
puts stderr "The Macaulay2 modulefile sets the "
puts stderr "PATH, LD_LIBRARY_PATH variable to"
puts stderr "the location of the Macaulay2 binaries.\n"
puts stderr "\nVersion 2.1.6"
}
module-whatis "Name: Macaulay2"
module-whatis "Version: 2.1.6"
module-whatis "Category: Package"
module-whatis "http://www.math.uiuc.edu/Macaulay2"


prepend-path PATH               /opt/macaulay2/2.1.6/gcc/bin
prepend-path LD_LIBRARY_PATH	/opt/macaulay2/2.1.6/gcc/lib/Macaulay2/x86_64-Linux-CentOSrelease-6.3
