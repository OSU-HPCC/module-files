#%Module1.0###################################################
#
# This modulefile for package nlopt creates a variable so
# that users can easily find the right libraries
#
##############################################################

proc ModulesHelp { } {
puts stderr "The nlopt module file defines the following environment variables:"
puts stderr "PATH, MANPATH for "
puts stderr "the location of the nlopt distribution and its libraries.\n"
puts stderr "\nVersion 2.4.2"
}
module-whatis "Name: nlopt"
module-whatis "Version: 2.4.2"
module-whatis "Category: statistics, math"
module-whatis "URL: http://ab-initio.mit.edu"
module-whatis "Description: Statistical software"

prepend-path LD_LIBRARY_PATH	/opt/nlopt/2.4.2/icc/lib
prepend-path CPATH		/opt/nlopt/2.4.2/icc/include
