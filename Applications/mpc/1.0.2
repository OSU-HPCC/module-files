#%Module1.0###################################################
#
# This modulefile for GNU MPC sets the Path variable
# to the bin directory
#
##############################################################

proc ModulesHelp { } {
puts stderr "The GNU MPC modulefile sets the "
puts stderr "LD_LIBRARY_PATH variable to"
puts stderr "the location of the MPC libraries.\n"
puts stderr "\nVersion 1.0.2"
}
module-whatis "Name: MPC"
module-whatis "Version: 1.0.2"
module-whatis "Category: libraries"
module-whatis "URL: http://www.multiprecision.org"

prepend-path LD_LIBRARY_PATH	/opt/mpc/1.0.2/lib
prepend-path CPATH		/opt/mpc/1.0.2/include
