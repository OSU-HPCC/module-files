# This modulefile for package antiSMASH creates a variable so
# that users can easily find the right libraries
#
##############################################################

proc ModulesHelp { } {
puts stderr "The antiSMASH module file defines the following environment variables:"
puts stderr "PATH "
puts stderr "the location of the antiSMASH distribution and its libraries.\n"
puts stderr "\nVersion 2.0.2"
}
module-whatis "Name: antiSMASH"
module-whatis "Version: 2.0.2"
module-whatis "Category: genomics, mining, metabolite"
module-whatis "URL: http://antismash.secondarymetabolites.org"
module-whatis "Description: antibiotics and Secondary Metabolite Analysis SHell"


prepend-path PATH		/opt/antismash/antismash-2.0.2
